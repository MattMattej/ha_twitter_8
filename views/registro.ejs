	<body>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5"></div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background-image: url(/img/twitter_bg.png)">
						   
						</div>
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign Up</h3>
								</div>
								<div class="w-100">
									<p class="social-media d-flex justify-content-end">
										<a
											href="#"
											class="social-icon d-flex align-items-center justify-content-center"
										>
											<span class="fa fa-facebook"></span>
										</a>
										<a
											href="#"
											class="social-icon d-flex align-items-center justify-content-center"
										>
											<span class="fa fa-google"></span>
										</a>
									</p>
								</div>
							</div>
							<form action="/registro" method="post" class="signin-form">
								<div class="form-group mb-3">
									<label class="label" for="name">firstname</label>
									<input
										type="text"
										name="firstname"
										class="form-control"
										style="border:none ;outline: none ;border-bottom: 1px solid #9999; "
										placeholder="firstname"
										required
									/>
								</div>
							
								<div class="form-group mb-3">
									<label class="label" for="email">E-mail</label>
									<input
										type="email"
										name="email"
										class="form-control"
										style="border:none ;outline: none ;border-bottom: 1px solid #9999;"
										
										placeholder="email"
										required
									/>
								</div>
								<div class="form-group mb-3">
									<label class="label" for="password">Password</label>
									<input
										type="password"
										name="password"
										class="form-control"
										style="border:none ;outline: none ;border-bottom: 1px solid #9999;"
										placeholder="Password"
										required
									/>
								</div>
								<div class="form-group">
									<button
										type="submit"
										class="form-control-1 btn btn-primary rounded submit px-3"
									>
										Sign Up
									</button>
								</div>
								<div class="form-group d-md-flex">
									<div class="w-50 text-left">
									
									</div>
									
								</div>
							</form>
							<p class="text-center">
								Do you already have an account?
								<a data-toggle="tab" href="login/">Sign In</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>

