<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Kittier - Home</title>
  </head>

  <body>
    <div class="col-4" id="left"><%- include("./partials/navbar") %></div>
    <div class="col-4" id="center">
      <ul class="lista-tweets">
        <% for(const tweet of tweets){ %>
        <li>
          <div class="card bg-dark my-4" style="width: 21rem">
            <img
              src="<%= tweet.author.avatar %> "
              class="card-img-top pic"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title"><%= tweet.author.username %></h5>
              <a href="/tweet/<%= tweet._id %> ">
                <p class="card-text"><%= tweet.content %></p>
              </a>
              <p><%= tweet.favoriteCount %></p>
            </div>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
    <div class="col-4">
      <h3>trendings</h3>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
